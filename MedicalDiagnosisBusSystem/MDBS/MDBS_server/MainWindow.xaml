        <TabControl Height="84" VerticalAlignment="Top" HorizontalAlignment="Stretch" Padding="0,0,0,0" BorderBrush="{x:Null}" DockPanel.Dock="Top">
            <TabControl.Resources>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Background" Value="#656565"/>
                </Style>
            </TabControl.Resources>
            <TabItem Style="{StaticResource ColorTab}" Header="Консультации" Width="120" Padding="0,0,0,0" BorderBrush="{x:Null}" Margin="-2,-2,2,0">
                <Grid Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" Margin="-1,-1,-1,-1" >
                    <Button Style="{StaticResource TransparentStyle}" Content="Ответить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="40" Margin="0,0,0,0" BorderBrush="{x:Null}" Background="#FFF0F0F0" Click="AnswerMessage"/>
                </Grid>
            </TabItem>
            <TabItem  Style="{StaticResource ColorTab}" Header="Базы"  Width="120" Padding="0,0,0,0" BorderBrush="{x:Null}" Margin="-2,-2,2,0">
                <Grid Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" Margin="-1,-1,-1,-1" >
                    <Button Style="{StaticResource TransparentStyle}" Content="Пациенты" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="40" Margin="0,0,0,0" BorderBrush="{x:Null}" Background="#FFF0F0F0" Click="ShowPatients"/>
                </Grid>
            </TabItem>
            <TabItem  Style="{StaticResource ColorTab}" Header="Справка"  Width="120"  Padding="0,0,0,0" BorderBrush="{x:Null}" Margin="-2,-2,2,0">
                <Grid Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" Margin="-1,-1,-1,-1" >
                    <Button Style="{StaticResource TransparentStyle}" Content="Помощь" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="40" BorderBrush="{x:Null}" Background="#FFF0F0F0"/>
                    <Button Style="{StaticResource TransparentStyle}" Content="О программе" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="40" Margin="120,0,0,0" BorderBrush="{x:Null}" Background="#FFF0F0F0" Click="Help"  />
                </Grid>
            </TabItem>
            <TabItem  Header="-" Visibility="Hidden" Height="40"   BorderBrush="{x:Null}" Width="20"/>
            <TabItem  Style="{StaticResource LabelTab}"  x:Name ="LoginLabel" Header="Вы вошли как:" IsEnabled="False"   Padding="0,0,0,0" Margin="-2,-2,2,0" />
        </TabControl>





        <ListBox x:Name="CategoryListBox" Width="168" HorizontalAlignment="Left" VerticalContentAlignment="Bottom" FontSize="18" FontFamily="Aharoni" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" SelectionChanged="ListBox_SelectionChanged">
            <ListBoxItem x:Name="Incoming" Content="Входящие" Height="30"/>
            <ListBoxItem x:Name="Outgoing" Content="Исходящие" Height="30"/>
            <ListBoxItem x:Name="Sending" Content="Отправляются" Height="30"/>
            <ListBoxItem x:Name="NeedAnswer" Content="Нужен ответ" Height="30"/>
            <ListBoxItem x:Name="Archive" Content="Архив" Height="30"/>
        </ListBox>
        <Grid ShowGridLines="False" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.7*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="MessageGridLabel" Grid.Column="0" Grid.Row="0" Height="25" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" HorizontalContentAlignment="Center" FontWeight="Bold"/>
            <DataGrid x:Name="MessageGrid" IsReadOnly="True" GridLinesVisibility="None" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" SelectionChanged="MessageGrid_SelectionChanged" LoadingRow="MessageGrid_LoadingRow" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
            <Label x:Name="DialogGridLabel" Grid.Column="1" Grid.Row="0" Height="25" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" HorizontalContentAlignment="Center" FontWeight="Bold"/>
            <DataGrid x:Name="DialogGrid" IsReadOnly="True" GridLinesVisibility="None" Grid.Column="1" Grid.Row="3" Grid.RowSpan="1" SelectionChanged="DialogGrid_SelectionChanged" LoadingRow="DialogGrid_LoadingRow" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <DataGrid.Resources>
                    <Style x:Key="wordWrapStyle" TargetType="{x:Type TextBlock}">
                        <Setter Property="TextWrapping" Value="Wrap"/>
                        <Setter Property="MaxWidth" Value="200"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Pink"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
            <ScrollViewer Grid.Column="1" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <DockPanel ScrollViewer.HorizontalScrollBarVisibility="Visible">
                    <StackPanel x:Name="PatientInfoPanel">
                        <DockPanel>
                            <Label Width="115" FontWeight="Bold" Content="Пациент:"/>
                            <Label x:Name="PatientCard"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Width="115" FontWeight="Bold" Content="Пол:"/>
                            <Label x:Name="PatientSex"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Width="115" FontWeight="Bold" Content="Возраст:"/>
                            <Label x:Name="PatientAge"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Width="115" FontWeight="Bold" Content="Вес пациента:"/>
                            <Label x:Name="PatientWeight"/>
                        </DockPanel>
                    </StackPanel>
                    <StackPanel x:Name="PatientInfoPanel2">
                        <DockPanel>
                            <Label Width="270" FontWeight="Bold" Content="Дата обращения:"/>
                            <Label x:Name="PatientVisitDate"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Width="270" FontWeight="Bold" Content="Чем лечился, проводилась ли пелотерапия:"/>
                            <Label x:Name="PatientUsedDrugs"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Width="270" FontWeight="Bold" Content="Период ремиссии:"/>
                            <Label x:Name="PatientRemissionPeriod"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Width="270" FontWeight="Bold" Content="Последнее обострение:"/>
                            <Label x:Name="PatientLastExacerbation"/>
                        </DockPanel>
                    </StackPanel>
                    <StackPanel x:Name="PatientInfoPanel3">
                        <DockPanel>
                            <Label Width="210" FontWeight="Bold" Content="Проведено лечение:"/>
                            <Label x:Name="PatientAppliedTherapy"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Width="210" FontWeight="Bold" Content="Результаты обследования:"/>
                            <Label x:Name="PatientSurveyResults"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Width="210" FontWeight="Bold" Content="Доп. информация о пациенте:"/>
                            <Label x:Name="PatientInfo"/>
                        </DockPanel>
                    </StackPanel>
                </DockPanel>
            </ScrollViewer>
            <ScrollViewer IsTabStop="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.Column="1" Grid.Row="2">
                <DockPanel x:Name="ImagePanel" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                    <Border BorderThickness="5" CornerRadius="5" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                        <Image x:Name="ImageControl0" MouseDown="ImageControl_MouseDown"/>
                    </Border>
                    <Border BorderThickness="5" CornerRadius="5" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                        <Image x:Name="ImageControl1" MouseDown="ImageControl_MouseDown"/>
                    </Border>
                    <Border BorderThickness="5" CornerRadius="5" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                        <Image x:Name="ImageControl2" MouseDown="ImageControl_MouseDown"/>
                    </Border>
                    <Border BorderThickness="5" CornerRadius="5" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                        <Image x:Name="ImageControl3" MouseDown="ImageControl_MouseDown"/>
                    </Border>
                    <Border BorderThickness="5" CornerRadius="5" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                        <Image x:Name="ImageControl4" MouseDown="ImageControl_MouseDown"/>
                    </Border>
                    <Border BorderThickness="5" CornerRadius="5" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                        <Image x:Name="ImageControl5" MouseDown="ImageControl_MouseDown"/>
                    </Border>
                    <Border BorderThickness="5" CornerRadius="5" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                        <Image x:Name="ImageControl6" MouseDown="ImageControl_MouseDown"/>
                    </Border>
                    <Border BorderThickness="5" CornerRadius="5" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                        <Image x:Name="ImageControl7" MouseDown="ImageControl_MouseDown"/>
                    </Border>
                    <Border BorderThickness="5" CornerRadius="5" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                        <Image x:Name="ImageControl8" MouseDown="ImageControl_MouseDown"/>
                    </Border>
                    <Border BorderThickness="5" CornerRadius="5" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                        <Image x:Name="ImageControl9" MouseDown="ImageControl_MouseDown"/>
                    </Border>
                </DockPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>