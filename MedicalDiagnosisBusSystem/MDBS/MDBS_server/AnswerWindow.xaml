<Window x:Class="MDBS_server.AnswerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDBS_server"
        mc:Ignorable="d"
        Title="Новое сообщение" Width="800" Height="350" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Name="MessagPanel">
            <Label>Кому</Label>
            <ComboBox Name="ToBox" SelectedIndex="0">
                <ComboBoxItem></ComboBoxItem>
            </ComboBox>
            <Label>Пациент</Label>
            <TextBox Name="PatientBox"></TextBox>
            <Label>План лечения</Label>
            <TextBox Name="TherapyPlanBox" Height="150"></TextBox>
            <Button Width="300" Click="AnswerMessage_Click">Отправить</Button>
        </StackPanel>
    </Grid>
</Window>
