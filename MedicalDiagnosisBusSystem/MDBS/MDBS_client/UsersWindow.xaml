<Window x:Class="MDBS_client.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDBS_client"
        mc:Ignorable="d"
        Title="Пользователи" Height="650" Width="1100">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top" MaxHeight="32">
            <Button Click="NewUser" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}">Новый пользователь</Button>
            <Separator></Separator>
        </ToolBar>
        <DataGrid Name="UserGrid" IsReadOnly="True" GridLinesVisibility="Horizontal" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" AutoGenerateColumns="True" AutoGeneratedColumns="UserGridColumnsGenerated">
            <DataGrid.Resources>
                <Style x:Key="wordWrapStyle" TargetType="{x:Type TextBlock}">
                    <Setter Property="TextWrapping" Value="Wrap"/>
                    <Setter Property="MaxWidth" Value="200"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
    </DockPanel>
</Window>
