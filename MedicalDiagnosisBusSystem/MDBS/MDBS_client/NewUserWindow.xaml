<Window x:Class="MDBS_client.NewUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDBS_client"
        mc:Ignorable="d"
        Title="Новый пользователь" Height="200" Width="800">
    <Grid>
        <StackPanel Name="PatientInfoPanel">
            <DockPanel>
                <Label Width="200" FontWeight="Bold">Имя пользователя:</Label>
                <TextBox Name="UserNameBox"></TextBox>
            </DockPanel>
            <DockPanel>
                <Label Width="200" FontWeight="Bold">Логин:</Label>
                <TextBox Name="LoginBox" IsReadOnly="True"></TextBox>
            </DockPanel>
            <DockPanel>
                <Label Width="200" FontWeight="Bold">Пароль:</Label>
                <PasswordBox Name="PasswordBox"></PasswordBox>
            </DockPanel>
            <DockPanel>
                <Label Width="200" FontWeight="Bold">Повторите пароль:</Label>
                <PasswordBox Name="RepeatPasswordBox"></PasswordBox>
            </DockPanel>
            <Button Width="200" Click="CreateUser_Click">Создать пользователя</Button>
        </StackPanel>
    </Grid>
</Window>